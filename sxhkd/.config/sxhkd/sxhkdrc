#----------------------------------------------------------------------
# Simple hotkey daemon
#----------------------------------------------------------------------
#----------------------------------------------------------------------
# Toggles crontab on/off
#----------------------------------------------------------------------
alt + g
   $HOME/.local/bin/cron/crontog
#----------------------------------------------------------------------
# Libreofffice files
#----------------------------------------------------------------------
alt + b
  soffice
#----------------------------------------------------------------------
# Cmus 
#----------------------------------------------------------------------
alt + m ; {m,l,a,p,u,s,t,n,r,comma,period}
  {exec st -e cmus,exec st -e clyrics -c $1 , \
  cmus-remote -C "toggle aaa_mode",cmus-remote -p,cmus-remote -u,\
  cmus-remote -s,cmus-remote -C "view tree",cmus-remote -n,\
  cmus-remote -r,cmus-remote -v -10%,cmus-remote -v +10%}
#----------------------------------------------------------------------
# Newsboat and Neomutt
#----------------------------------------------------------------------
#alt +  {m,b}
#  st -e {/usr/bin/neomutt,newsboat}
#----------------------------------------------------------------------
# Picom on and off 
#----------------------------------------------------------------------
alt + p ; {n,f}
   {picom,pkill picom}
#----------------------------------------------------------------------
#----------------------------------------------------------------------
# Function keys
#----------------------------------------------------------------------
super + F2
  $HOME/.dmenu/mydmenus.sh
#----------------------------------------------------------------------
super + F3
  /usr/local/bin/dmenu_run -p "Choose application" -l 10
# ----------------------------------------------------------------------
super + F4
  /usr/bin/passmenu -p "Password for:" -l 10
#----------------------------------------------------------------------
super + F5
  $HOME/.local/bin/dmenuunicode
#----------------------------------------------------------------------
super + F6
  st -e /usr/bin/yazi 
#----------------------------------------------------------------------
super + F8
  exec st -e /usr/bin/taskwarrior-tui
#----------------------------------------------------------------------
super + F10
  /usr/bin/tixati
#----------------------------------------------------------------------

# Volume control
#----------------------------------------------------------------------
XF86AudioRaiseVolume
   amixer set Master 5%+
XF86AudioLowerVolume
   amixer set Master 5%-
XF86AudioMute
   amixer set Master toggle
#----------------------------------------------------------------------
# Restart dwm
#----------------------------------------------------------------------
ctrl + shift + q
  pkill -RTMIN+8 dwm
#----------------------------------------------------------------------
# Kill nonresponding apps
#----------------------------------------------------------------------
alt + period
    /usr/bin/xkill
#----------------------------------------------------------------------
